@model EcommerceV1.Models.Role

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">
    <h2 class="header-title">Chỉnh sửa quyền truy cập</h2>
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" href="#">Danh sách quyền truy cập</a>
            <span class="breadcrumb-item active">Chỉnh sửa quyền truy cập</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <form asp-action="Edit" asp-route-id="@Model.RoleId" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RoleId" />
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="role-name">Role Name</label>
                    <input type="text" class="form-control" id="role-name" asp-for="@Model.RoleName" placeholder="Role name">
                </div>
                <div class="form-group col-md-6">
                    <label for="role-desc">Description</label>
                    <input type="text" class="form-control" id="role-desc" asp-for="@Model.Description" placeholder="Description">
                </div>
            </div>
            <div class="form-group">
                <button type="submit" value="Edit" class="btn btn-primary">Lưu thay đổi</button>
            </div>
           
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

