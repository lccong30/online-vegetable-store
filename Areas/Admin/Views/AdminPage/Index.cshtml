@model IEnumerable<EcommerceV1.Models.Page>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <div class="text-right">
            <a asp-action="Create" class="btn btn-primary">
                <i class="anticon anticon-plus-circle m-r-5"></i>
                <span>Thêm trang</span>
            </a>
        </div>
        <table class="table table-hover e-commerce-table">
            <thead>
                <tr>

                    <th>ID</th>
                    <th>Tên trang</th>
                    <th>Tiêu đề</th>
                    <th>Ngày tạo</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>

                        <td>
                            @item.PageId
                        </td>
                        <td>
                            <div class="d-flex align-items-center">

                                <h6 class="m-b-0">@item.PageName</h6>
                            </div>
                        </td>
                        <td>@item.Title</td>
                        <td>@item.CreatedDate</td>
                        <td>
                            @if (item.Published)
                            {
                                <div class="d-flex align-items-center">
                                    <div class="badge badge-success badge-dot m-r-10"></div>
                                    <div>Publish</div>
                                </div>
                            }
                            else
                            {
                                <div class="d-flex align-items-center">
                                    <div class="badge badge-danger badge-dot m-r-10"></div>
                                    <div>Non Publish</div>
                                </div>
                            }

                        </td>
                        <td class="text-right">
                            <a asp-area="Admin" asp-action="Details" asp-route-id="@item.PageId" asp-controller="AdminPage" class="btn btn-tone btn-info m-r-5"> <i class="anticon anticon-eye"> </i></a>
                            <a asp-area="Admin" asp-action="Edit" asp-route-id="@item.PageId" asp-controller="AdminPage" class="btn btn-tone btn-primary m-r-5"> <i class="anticon anticon-edit"> </i></a>
                            <a asp-area="Admin" asp-action="Delete" asp-route-id="@item.PageId" asp-controller="AdminPage" class="btn btn-tone btn-danger m-r-5"> <i class="anticon anticon-delete"> </i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>


    </div>
</div>
