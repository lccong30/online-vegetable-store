@*@model IEnumerable<EcommerceV1.Models.Category>*@
@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<EcommerceV1.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="">
    <div class="page-header">
        <h2 class="header-title">Orders List</h2>
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
                <a class="breadcrumb-item" href="#">Quản lý danh mục</a>
                
            </nav>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="row m-b-30">
                <div class="col-lg-12 text-right">
                    <a asp-action="Create" class="btn btn-primary text-white">
                        <i class="anticon anticon-plus-circle m-r-5"></i>
                        <span>Tạo danh mục</span>
                    </a>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-hover e-commerce-table">
                    <thead>
                        <tr>
                            
                            <th>ID</th>
                            <th>Tên danh mục</th>
                            <th>Mô tả</th>
                            <th>Sắp xếp</th>
                            <th>Trạng thái</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.CatId
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <h6 class="m-b-0 m-l-10">@item.CatName</h6>
                                    </div>
                                </td>
                                <td>@item.Description</td>
                                <td>@item.Ordering</td>


                                <td>
                                    @if (item.Published)
                                    {
                                        <div class="d-flex align-items-center">
                                            <div class="badge badge-success badge-dot m-r-10"></div>
                                            <div> Active</div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="d-flex align-items-center">
                                            <div class="badge badge-danger badge-dot m-r-10"></div>
                                            <div>UnActive</div>
                                        </div>
                                    }
                                </td>

                                <td class="text-right">
                                    <a asp-area="Admin" asp-action="Details" asp-route-id="@item.CatId" asp-controller="AdminCategories" class="btn btn-tone btn-info m-r-5"> <i class="anticon anticon-eye"> </i></a>
                                    <a asp-area="Admin" asp-action="Edit" asp-route-id="@item.CatId" asp-controller="AdminCategories" class="btn btn-tone btn-primary m-r-5"> <i class="anticon anticon-edit"> </i></a>
                                    <a asp-area="Admin" asp-action="Delete" asp-route-id="@item.CatId" asp-controller="AdminCategories" class="btn btn-tone btn-danger m-r-5"> <i class="anticon anticon-delete"> </i></a>
                                </td>
                            </tr>
                        }
                     
                       
                    </tbody>
                </table>
                <div aria-label="Page navigation example">
                    <ul class="pagination">
                        <pager class="pager-container" list="@Model" asp-area="Admin" asp-controller="AdminCategories" asp-route-CatID="@ViewBag.CurrentCateId" asp-action="Index" />
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

